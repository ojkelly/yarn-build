{
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./.",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "esnext",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "strict": true,
    "target": "es2018",
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "types": [
      "jest"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./dist",
    "packages/yarnpkg-doctor/fixtures"
  ]
}
