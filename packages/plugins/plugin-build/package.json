    "@yarnpkg/plugin-pack": "*",
    "esbuild": "^0.20.0",
    "jest": "^26.6.3",
    "jest-pnp-resolver": "^1.2.3",
    "js-yaml": "^4.1.0",
    "replace": "^1.2.2",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typanion": "^3.14.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@ojkelly/yarn-build-shared": "workspace:*",
    "@opentelemetry/api": "^1.7.0",
