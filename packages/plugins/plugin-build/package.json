    "@yarnpkg/plugin-pnp": "*",
    "@yarnpkg/pnp": "*",
    "@yarnpkg/pnpify": "*",
    "await-semaphore": "0.1.3",
    "clipanion": "^4.0.0-rc.3",
    "date-fns": "^3.3.1",
    "esprima": "^4.0.1",
    "ignore": "^5.3.1",
    "is-ci": "^3.0.1",
    "micromatch": "^4.0.5",
